---
const path = Astro.url.pathname;

const tabs: {
    name: string;
    href: string;
}[] = [
    {
        name: "Following",
        href: "/",
    },
    {
        name: "Trending",
        href: "/trending",
    },
];
---

<h4 class="text-2xl font-medium">Home</h4>
<div class="grid grid-cols-2 mt-2">
    {
        tabs.map((tab) => (
            <a href={tab.href} class={path === tab.href ? "active" : ""}>
                {tab.name}
            </a>
        ))
    }
</div>

<style lang="postcss">
    a {
        @apply text-center py-4 hover:bg-gray-50/10 transition-colors;
    }

    a.active {
        @apply text-primary border-b-2 border-current;
    }
</style>
